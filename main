package marcusPenkertAssignment;

import java.io.File;
import java.util.Scanner;
import java.io.BufferedReader;

public class Control extends fileProcessor1 implements interface1
{
	//constructor
    public Control(String fileName)
    {
		super(fileName);
	}
    
	public static void main(String[] args)
	{
		
		// connect to file
        Control processor = new Control("Penkert_Marcus_L(1).csv");

        // scanner to take inputs from the user
        Scanner scanner = new Scanner(System.in);
        
        // used for switch case decision
        int choice = -1;

        while (choice != 0) // creates continuous loop so no need to rerun
        {
        	// calls
            printMenu();
            
            try
            {
            	// takes users input to show what they want to do
                System.out.print("Enter your choice (0-5): ");
                choice = Integer.parseInt(scanner.nextLine());

                switch (choice)
                {
                    case 1:
                    	processor.readFile();
                        break;
                    case 2:
                        System.out.print("Enter a word to search for: ");
                        String word = scanner.nextLine();
                        processor.searchWord(word);
                        break;
                    case 3:
                        System.out.print("Enter new data to add: ");
                        String data = scanner.nextLine();
                        processor.addData(data);
                        break;
                    case 4:
                        System.out.println("File name: " + processor.getFileName());
                        break;
                    case 5:
                    	processor.displayStatistics();
                    	break;
                    case 0:
                        System.out.println("Goodbye!");
                        break;
                    default:
                        System.out.println("Invalid, select an integer between 0 and 5.");
                }
            } catch (NumberFormatException e)
            {
                System.out.println("Invalid input");
            }
        }
        scanner.close();
    }

    private static void printMenu()
    {
       // display menu for options
    	System.out.println("Menu:");
        System.out.println("1. Print file");
        System.out.println("2. Search for word");
        System.out.println("3. Add data to the file");
        System.out.println("4. Show file name");
        System.out.println("5. print statistics about the file");
        System.out.println("0. Exit");
    }

}
